#!/usr/bin/env bash
set -Eeuo pipefail

ARG_NAME="${1:-index}"
SCRIPT_DIR="$(dirname "$(readlink -f "${0}")")"
REPO_DIR="$(dirname "${SCRIPT_DIR}")"
NOTE_DIR="${REPO_DIR}/drafts/"
NOTE_FILE="${NOTE_DIR}/$(date +"%Y-%m-%d")_${ARG_NAME}.md"

mkdir --parent "${NOTE_DIR}"

if ! [ -f "${NOTE_FILE}" ]; then

    echo "---
title: TODO
# date: $(date +"%Y-%m-%d")
---

" > "${NOTE_FILE}"

fi

if [ "${EDITOR:-}" != "" ]; then
    "${EDITOR}" "${NOTE_FILE}"
fi
