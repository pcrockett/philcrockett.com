---
layout: base.liquid
---
<div id="content">
    {% if title %}
    <h1>{{ title }}</h1>
    {% endif %}
    <section>
        {{ content }}
    </section>
</div>
<footer class="stay-above-header">
    <p>
        &copy; {{ global.copyrightDate }} <a href="/">{{ global.me }}</a> &#183;
        {% newTabLink "CC BY-SA 4.0" "https://creativecommons.org/licenses/by-sa/4.0/" %}<br>
        <em><small>{{ global.hermitCredit }}</small></em>
    </p>
</footer>
<header id="site-header">
    <a href="/">{{ global.me }}</a>
    <nav>
        {% for page in mainPages %}
        <a href="{{ page.href }}">{{ page.title }}</a>
        {% endfor %}
    </nav>
</header>
